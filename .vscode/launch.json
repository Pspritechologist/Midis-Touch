	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'midis-touch'",
			"cargo": {
				"args": [
					"build",
					"--bin=midis-touch",
					"--package=midis-touch",
					"--no-default-features",
					"--features=7mb_font",
				],
				"filter": {
					"name": "midis-touch",
					"kind": "bin"
				}
			},
			"args": "test.mid",
			"cwd": "${workspaceFolder}"
		},
		
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'midis-touch-gui'",
			"cargo": {
				"args": [
					"build",
					"--bin=midis-touch-gui",
					"--package=midis-touch",
					"--no-default-features",
					"--features=7mb_font",
				],
				"filter": {
					"name": "midis-touch-gui",
					"kind": "bin"
				}
			},
			"args": "test.mid",
			"cwd": "${workspaceFolder}"
		},

		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'midis-hw-player'",
			"cargo": {
				"args": [
					"build",
					"--bin=midis-hw-player",
					"--package=midis-touch"
				],
				"filter": {
					"name": "midis-hw-player",
					"kind": "bin"
				}
			},
			"args": "test.mid",
			"cwd": "${workspaceFolder}"
		},

		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'midis-touch'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=midis-touch",
					"--package=midis-touch"
				],
				"filter": {
					"name": "midis-touch",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}